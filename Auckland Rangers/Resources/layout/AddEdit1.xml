<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back Button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Title : Make Reservation -->
    <TextView
        android:id="@+id/textViewReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Reservation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textAucklandRangers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auckland Rangers"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewPayment"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textAucklandRangers">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Date Section -->
                <RelativeLayout
                    android:id="@+id/DateSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/textAucklandRangers"
                    android:layout_alignParentBottom="false">

                    <TextView
                    android:id="@+id/textlabelSpinner"        
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:text="Number : "
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/> 

                    <Spinner
                    android:id="@+id/spinnerNumber"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/textlabelSpinner"
                    android:layout_below="@+id/textAucklandRangers"
                    android:drawSelectorOnTop="true"/> 
                
                    <DatePicker
                        android:layout_width="550dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinnerNumber"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/datePicker1" />
                    <TimePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_marginTop="50dp"
                        android:layout_below="@+id/datePicker1"
                        android:id="@+id/timePicker1" />

                    <EditText
                        android:id="@+id/editTextLists"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:hint=" Lists"
                        android:background="@drawable/gray_button"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/timePicker1"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp" />

                    <Button
                        android:id="@+id/buttonAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:background="@drawable/blue_button"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="50dp"
                        android:layout_below="@+id/editTextLists"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"/>
    
                    <Button
                        android:id="@+id/buttonEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:background="@drawable/blue_button"
                        android:textColor="@android:color/white"
                        android:padding="16dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/buttonAdd"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"/>

                </RelativeLayout>                           

            </LinearLayout>
        
        </ScrollView>

</RelativeLayout>
