<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">   

    <!-- Title : Contact -->
    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_Horizontal="true"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textViewContact"
        android:layout_Horizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/editTextCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/textViewCustomerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editTextCustomerName"
        android:layout_Horizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/editTextCustomerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewCustomerEmail"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Subject -->
    <TextView
        android:id="@+id/textViewSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editTextCustomerEmail"
        android:layout_Horizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/editTextSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewSubject"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write your message"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editTextSubject"
        android:layout_Horizontal="true"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"/>

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewMessage"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <!-- Send Button -->
    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:layout_below="@+id/editTextMessage"
        android:layout_centerHorizontal="true" />

    <!-- Restaurant Image 1 -->
    <ImageView
        android:id="@+id/imageViewRestaurant1"
        android:layout_width="163dp"
        android:layout_height="160dp"
        android:src="@drawable/restaurant1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"/>

    <!-- Navigation Section -->
    <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />

        <Button
            android:id="@+id/buttonContactUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Us" />

        <Button
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />
    </LinearLayout>

</RelativeLayout>
