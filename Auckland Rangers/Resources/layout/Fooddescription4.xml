<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:soundEffectsEnabled="false">
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/black"
        android:background="@drawable/white_button_border"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:src="@drawable/pilaf"
        android:layout_width="800dp"
        android:layout_height="300dp"
        android:id="@+id/imageView1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:text="  Tera Pilaf                          $24.99"
        android:textColor="#ff000000" 
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:textStyle="bold"
        android:text="Ingredients"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:layout_width="518.5dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:text="Pork Shoulder, Bell Pepper, Onion, Garlic, Rice, Oyster Sauce, Tonkatsu Sauce."
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:textStyle="bold"
        android:text="Recipe"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:layout_width="518.5dp"
        android:layout_height="200dp"
        android:layout_marginTop="500dp"
        android:text="After preparing the ingredients, grill the pork shoulder. When the meat starts to brown, add onions and bell peppers and sauté together. Then, add rice and sauce, stir-fry everything together, and it's done!"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:id="@+id/buttonAddorder"
        android:layout_width="500.0dp"
        android:layout_height="65dp"
        android:text="Order Now"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft=""
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="720dp"
        android:layout_below="@+id/editTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>
        <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"/>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />

        <Button
            android:id="@+id/buttonContactUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Us" />

        <Button
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />
    </LinearLayout>



</RelativeLayout>
