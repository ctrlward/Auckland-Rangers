<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="163dp"
        android:layout_height="160dp"
        android:src="@drawable/aucklandrangerslogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"/>

    <!-- Title : Company -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auckland Rangers"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover and Enjoy Food"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewMyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_Horizontal="true"
        android:layout_below="@+id/textViewTitle1"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewMyAccount"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="@android:color/darker_gray"
        android:inputType="textPassword"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextFirstName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <EditText
        android:id="@+id/editTextMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextLastName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextMobileNumber"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />
    
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/black"
        android:padding="16dp"
        android:layout_margin="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editTextEmailAddress"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
