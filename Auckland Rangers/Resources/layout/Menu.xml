<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Auckland Rangers"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/txtName"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp"
        android:textStyle="bold" 
        />
    <ImageView
        android:id="@+id/imgFoods"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/menuscreenpic1"
        android:layout_x="180dp"
        android:layout_y="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:text="Explore"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp" 
        />
    <Button
        android:text="Reservation"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="90dp"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:id="@+id/button1"
        />
    <Button
        android:text="Menu List"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="350dp"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:textStyle="bold" />
    <TextView
        android:layout_width="467.0dp"
        android:layout_height="163.0dp"
        android:layout_marginTop="470dp"
        android:text="   Specials"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        android:background="#ff7bb9fb" />
    <TextView
        android:layout_width="415.0dp"
        android:layout_height="70dp"
        android:layout_marginTop="520dp"
        android:text="Discover our lastest offers"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp" />
    <TextView
        android:layout_width="407.5dp"
        android:layout_height="41.5dp"
        android:layout_marginTop="590dp"
        android:text="See more ->"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp" />
        <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="610dp"
        android:text="..."
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="60dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="30dp"
        android:text="Featured items"
        android:layout_height="70dp"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"/>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />

        <Button
            android:id="@+id/buttonContactUs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Us" />

        <Button
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />
    </LinearLayout>
    
        

</RelativeLayout>